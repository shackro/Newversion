{
  "builds": [
    {
      "src": "pesaprime/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "pesaprime/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "DJANGO_SETTINGS_MODULE": "pesaprime.settings",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "pesaprime2026.vercel.app,.now.sh",
    "CSRF_TRUSTED_ORIGINS": "https://*.vercel.app,https://*.now.sh"
  }
}